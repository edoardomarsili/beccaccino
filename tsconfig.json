{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "jsx": "react",
    "rootDir": "./",
    "baseUrl": "./src",
    "declaration" : true,
    "declarationDir": "./dist/",
    "paths": {
      "@lib/*": [
        "*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}
