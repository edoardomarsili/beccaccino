{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "jsx": "react",
    "baseUrl": "./",
    "declaration" : true,
    "declarationDir": "./dist/",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}
